<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/toolbar_bg</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/state_title_bg</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/window_bg</item>
    </style>


    <!--满宽分割线-->
    <style name="divider_for_note_martch_weight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#b4b4b4</item>
    </style>

    <style name="title_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:background">@color/youban_background</item>
    </style>

    <style name="back_style">
        <item name="android:layout_width">@dimen/title_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/title_btn_bg</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

    <style name="title_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/ad_text_color</item>
        <item name="android:textSize">@dimen/text_size_media_big</item>
        <item name="android:layout_marginLeft">@dimen/title_height</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="title_right_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:minWidth">@dimen/title_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/btn_grey_red</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_media</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
